<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', {siteTitle, rootDomain}) %>
        <link rel="stylesheet" href="/css/template.css">
</head>

<body class="darkTheme">
    <%- include('../partials/header', { siteTitle, discordInvite, rootDomain, user: loggedInUser }) %>

        <div class="main_div_one">
            <div class="main_div_container">
                <div class="main_div_content">
                    <div class="profile_container">
                        <!-- Profile Header -->
                        <div class="profile_header">
                            <h1>Welcome to <%- pageUser.username %>'s page!</h1>
                            <% if (loggedInUser && loggedInUser.username===pageUser.username) { %>
                                <div class="edit_button">
                                    <span>This is your page!</span>
                                </div>
                                <% } %>
                        </div>

                        <!-- Links Section -->
                        <div class="links_section">
                            <!-- Add Link Form - Only visible to page owner -->
                            <% if (loggedInUser && loggedInUser.username===pageUser.username) { %>
                                <div class="links_management">
                                    <form action="/api/links/add" method="POST" class="add_link_form">
                                        <div class="form_group">
                                            <input type="text" name="title" placeholder="Link Title" required>
                                            <input type="url" name="url" placeholder="https://..." required>
                                        </div>
                                        <button type="submit" class="add_button">Add Link</button>
                                    </form>
                                </div>
                                <% } %>

                                    <!-- Links Display -->
                                    <div class="links_container">
                                        <% if (links && links.length> 0) { %>
                                            <% links.forEach(function(link) { %>
                                                <div class="link_item">
                                                    <!-- Link Button -->
                                                    <a href="<%- link.url %>" target="_blank" rel="noopener noreferrer"
                                                        class="link_button">
                                                        <%- link.title %>
                                                    </a>

                                                    <!-- Edit/Delete Actions - Only visible to page owner -->
                                                    <% if (loggedInUser && loggedInUser.username===pageUser.username) {
                                                        %>
                                                        <div class="link_actions">
                                                            <button class="edit_link_btn"
                                                                onclick="toggleEditForm('<%= link.id %>')">
                                                                Edit
                                                            </button>
                                                            <form action="/api/links/delete" method="POST"
                                                                style="display: inline;">
                                                                <input type="hidden" name="linkId"
                                                                    value="<%= link.id %>">
                                                                <button type="submit"
                                                                    class="delete_link_btn">Delete</button>
                                                            </form>
                                                        </div>

                                                        <!-- Edit Form -->
                                                        <form action="/api/links/update" method="POST"
                                                            class="edit_link_form" id="edit_form_<%= link.id %>"
                                                            style="display: none">
                                                            <input type="hidden" name="linkId" value="<%= link.id %>">
                                                            <input type="text" name="title" value="<%= link.title %>"
                                                                placeholder="Link Title" required
                                                                style="max-width: 95%;">
                                                            <input type="url" name="url" value="<%= link.url %>"
                                                                placeholder="https://..." required
                                                                style="max-width: 95%;">
                                                            <div class="form_buttons">
                                                                <button type="submit"
                                                                    class="edit_link_btn">Save</button>
                                                                <button type="button" class="delete_link_btn"
                                                                    style="margin-left: 5px;"
                                                                    onclick="toggleEditForm('<%= link.id %>')">
                                                                    Cancel
                                                                </button>
                                                            </div>
                                                        </form>
                                                        <% } %>
                                                </div>
                                                <% }); %>
                                                    <% } else { %>
                                                        <div class="no_links">
                                                            <p>No links added yet!</p>
                                                        </div>
                                                        <% } %>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/footer', {siteTitle, rootDomain, version}) %>

            <% if (loggedInUser && loggedInUser.username===pageUser.username) { %>
                <script>
                    function toggleEditForm(linkId) {
                        const form = document.getElementById(`edit_form_${linkId}`);
                        form.style.display = form.style.display === 'none' ? 'block' : 'none';
                    }
                </script>
                <% } %>
</body>

</html>
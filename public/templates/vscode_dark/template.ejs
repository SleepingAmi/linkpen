<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../views/partials/head', {siteTitle, rootDomain, pageUser}) %>
        <link rel="stylesheet" href="/templates/vscode_dark/style.css">
</head>

<body class="vscode-theme">
    <%- include('../../views/partials/header', { siteTitle, discordInvite, rootDomain, user: loggedInUser }) %>

        <div class="vscode-container">
            <div class="status-bar">
                <div class="status-item">
                    <span class="status-dot">â€¢</span>
                    <span class="username"><%- pageUser.username %></span>
                </div>
                <div class="status-right">
                    <span class="git-info">main</span>
                    <span class="latency">248ms</span>
                </div>
            </div>

            <div class="content-area">
                <div class="welcome-section">
                    <h1 class="welcome-text"><%- pageUser.username %>'s Links</h1>
                    <% if (loggedInUser && loggedInUser.username===pageUser.username) { %>
                        <div class="edit-controls">
                            <a href="/dashboard" class="edit-button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                </svg>
                                Edit Page
                            </a>
                        </div>
                        <% } %>
                </div>

                <div class="links-container">
                    <% if (links && links.length> 0) { %>
                        <% links.forEach(function(link) { %>
                            <a href="<%- link.url %>" target="_blank" rel="noopener noreferrer" class="link-item">
                                <span class="link-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.002 1.002 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z" />
                                        <path
                                            d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243L6.586 4.672z" />
                                    </svg>
                                </span>
                                <span class="link-title"><%- link.title %></span>
                            </a>
                            <% }); %>
                                <% } else { %>
                                    <div class="no-links">
                                        <span class="empty-message">No links added yet!</span>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>

        <%- include('../../views/partials/footer', {siteTitle, rootDomain, version}) %>
            <script src="/templates/vscode_dark/script.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../views/partials/head', {siteTitle, rootDomain, pageUser}) %>
        <link rel="stylesheet" href="/templates/matrix_monitor/style.css">
</head>

<body class="matrix-theme">
    <%- include('../../views/partials/header', { siteTitle, discordInvite, rootDomain, user: loggedInUser }) %>

        <div class="container">
            <div class="top-bar">
                <div class="main-indicator">
                    <span class="dot">â€¢</span>
                    <span class="main-text"><%- pageUser.username %></span>
                    <span class="time">248ms</span>
                </div>
                <div class="top-links">
                    <% if (loggedInUser && loggedInUser.username===pageUser.username) { %>
                        <span><a href="/dashboard">Edit Profile</a></span>
                        <% } %>
                            <span>Links</span>
                </div>
            </div>

            <div class="metrics-grid">
                <div class="metric">
                    <div class="metric-label">Links</div>
                    <div class="metric-value">
                        <%= links ? links.length : 0 %>
                    </div>
                </div>
                <div class="metric">
                    <div class="metric-label">Last Updated</div>
                    <div class="metric-value" id="lastUpdated">Just now</div>
                </div>
                <div class="metric">
                    <div class="metric-label">Status</div>
                    <div class="metric-value">Online</div>
                </div>
            </div>

            <div class="links-grid">
                <% if (links && links.length> 0) { %>
                    <% links.forEach(function(link) { %>
                        <div class="card">
                            <div class="card-header">
                                <span><%- link.title %></span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.002 1.002 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z" />
                                    <path
                                        d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z" />
                                </svg>
                            </div>
                            <a href="<%- link.url %>" target="_blank" rel="noopener noreferrer" class="link-content">
                                <div class="link-url"><%- link.url %></div>
                            </a>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <div class="no-links">
                                    <p>No links added yet!</p>
                                </div>
                                <% } %>
            </div>
        </div>

        <%- include('../../views/partials/footer', {siteTitle, rootDomain, version}) %>
            <script src="/templates/matrix_monitor/script.js"></script>
</body>

</html>